---
layout: layout.njk
pagination:
  data: perMonth
  size: 1
  alias: month
permalink: "monthly/{{ month.date | slugify }}/"
eleventyComputed:
  title: "{{ month.date }} web platform update"
---

<h1>{{ month.date }} web platform update</h1>

<section class="month-update">
  {% if month.features.high.length > 0 %}
    <h2>
      Now widely available on the web platform
      <div class="baseline-high"><span class="availability">Widely available</span></div>
    </h2>
    <ul>
      {% for feature in month.features.high %}
        <li class="feature mini baseline-high">
          <p>
            <strong>{{ feature.name }}</strong>: {{ feature.description_html | safe }}
            <strong><a href="/features/{{ feature.id | slugify }}/">Learn more.</a></strong>
          </p>
        </li>
      {% endfor %}
    </ul>
  {% endif %}

  {% if month.features.low.length > 0 %}
    <h2>
      Newly available on the web platform
      <div class="baseline-low"><span class="availability">Newly available</span></div>
    </h2>
    <ul>
      {% for feature in month.features.low %}
        <li class="feature mini baseline-low">
          <p>
            <strong>{{ feature.name }}</strong>: {{ feature.description_html | safe }}
            <strong><a href="/features/{{ feature.id | slugify }}/">Learn more.</a></strong>
          </p>
        </li>
      {% endfor %}
    </ul>
  {% endif %}

  {% for browser in browsers %}
    {% if month.features[browser.id].length > 0 %}
      <h2>
        Now available in {{ browser.name }}
        <div class="baseline-false"><span class="availability">Limited availability</span></div>
      </h2>
      <ul>
        {% for feature in month.features[browser.id] %}
          <li class="feature mini baseline-false">
            <p>
              <strong>{{ feature.name }}</strong>: {{ feature.description_html | safe }}
              <strong><a href="/features/{{ feature.id | slugify }}/">Learn more.</a></strong>
            </p>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  {% endfor %}
</section>
